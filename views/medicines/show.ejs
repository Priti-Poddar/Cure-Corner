<% layout("/layouts/boilerplate") %>
<%- include("../includes/smNavBar.ejs")%>
    <%- include("../includes/navbar.ejs")%>
    <%- include("../includes/flash.ejs")%>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= medicine.drugName %></h3>
   </div>
    <div class="card show-card mt-3 col-6 offset-3">
      <img
        src="<%= medicine.image %>"
        class="card-img-top show-img"
        alt="https://bsmedia.business-standard.com/_media/bs/img/article/2023-07/12/full/1689175810-294.jpg?im=FitAndFill=(826,465)"/>
      <div class="card-body">
        <p class="card-text mt-3">
            &#8377;<%= medicine.price.toLocaleString("en-IN") %></br>
            <b>Description: </b><br>
            <%= medicine.description %><br>
            <b>Consume Type: </b><br>
            <%= medicine.consumeType %></br>
            <b>Best before: </b>
            <%= medicine.expirydate %><br>
            <b>SideEffects: </b><br>
            <%= medicine.sideEffects %></br>
            <b>Manufacturer: </b><br>
            <%= medicine.manufacturer %><br>
            <b>Disclaimer: </b><br>
            <%= medicine.disclaimer %></br>

        </p>
      </div>
    </div>

    <div class="btns mb-5">
      <% if(currUser && currUser.username == "Admin"){ %> 
    <a href="/medicines/<%= medicine._id %>/edit" class="btn add-btn col-1 offset-3" >Edit</a>
    
    <form method="POST" action="/medicines/<%= medicine.id %>?_method=DELETE">
      <button class="btn btn-dark offset-6">Delete</button>
    </form>
<%} else { %>
    <form action="/cart/<%= medicine._id %>" method="get">
                    <input type="hidden" name="productId" value="<%= medicine._id %>">
                    <input type="hidden" name="quantity" value="1">
              <button class="btn" type="submit" style="background-color: #536493; color: white; margin-left: 20rem;">Add to cart</button>
    </form>
  <%}%>
    </div>
          <%- include("../includes/footer.ejs") %>


  