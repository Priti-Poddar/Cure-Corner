<% layout("/layouts/boilerplate") %>
<%- include("../includes/smNavBar.ejs")%>
    <%- include("../includes/navbar.ejs")%>
    <%- include("../includes/flash.ejs")%>

    
    <div class="file-name">
    <i class="fa-solid fa-file-csv"></i> &nbsp;&nbsp; <%= fileName %>
    </div>

<!-- search bar -->
<div class="csv-search-bar">
    <form id="csvsearchForm">
        <div class="csvsearch-box">
            <input type="text" id="csvsearch-input" placeholder="Search data...">
            <button id="go" class="search-btn" type="button">Go</button>
        </div>
    </form>
    <div>
        <p id="total-rows">Total Rows: <%=length%></p>
    </div>
</div>

<!-- search results -->
<div class="result-aria">
    <table id="Inventory">
        <thead>
            <tr>
            <% for(let h of head) { %>
                <th><%= h %></th>
            <% } %>
            </tr>
        </thead>
        <tbody>
            <% for(let row of data) { %>
            <tr>
                <% for(let key of Object.keys(row)) { %>
                    <td><%= row[key] %></td>
                <% } %>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>

</div>




    <%- include("../includes/footer.ejs") %>
<script src="/JS/showInventory.js"></script>

