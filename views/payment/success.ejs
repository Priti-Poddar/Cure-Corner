<% layout("/layouts/boilerplate") %>
<%- include("../includes/flash.ejs")%>

<div style="display: flex;">
<div style="background-color: #03c04a ; width: 80%;">
    <div class="thankYouIcon">
        <img src="https://static.vecteezy.com/system/resources/thumbnails/021/115/771/small_2x/white-circle-free-png.png"
     style="background-color: transparent; width: 12rem; height: 12rem;"> 
     <i class="fa-solid fa-check fa-2xl position-relative" style="color: #03c04a;transform: scale(3); top: -6rem;"></i>
    <div class="thankYou">
     <p>THANK YOU!</p>
    <H3>YOUR ORDER IS CONFIRMED</H3>
    </div>
    </div>

<div class="container px-1 px-md-4 py-5 mx-auto">
    <div class="cardOrd">
        <div class="row d-flex justify-content-between px-3 top">
            <div class="d-flex" style="display: flex; justify-content: space-between;">
                <h5>ORDER <span class="text-primary font-weight-bold">#Y34XDHR</span></h5>
                <p><%=Date().toString().split(" ").slice(1,4).join(" ")%></p>
            </div>
            
        </div>
        <!-- Add class 'active' to progress -->
        <div class="row d-flex justify-content-center">
            <div class="col-12">
            <ul id="progressbar" class="text-center">
                <li class="active step0">ORDER CONFIRMED</li>
                <li class="active step0">SHIPPED</li>
                <li class="active step0">DISPATCHED</li>
                <li class="step0">DELIVERED</li>
            </ul>
            </div>
        </div>
<div class="d-flex" style="margin-left: 1rem;">
                <p class="mb-0">Expected Arrival <span>01/12/19</span> <a href="/myOrders" style="margin-left: 1rem;">Go To Orders</a></p>
            </div>

    </div>
</div>
    
</div>

<div style="width: 30%;">
<!-- <p><%= paymentDetails.data.responseCode %></p> -->

<div style="background-color: rgb(235, 233, 233); display: flex;">
    <span><p>ORDER DETAIL</p>
    <p><%=orders.Order_id%></p>
    <!-- <p><%=orders%></p> -->
    </span>
    <span>Paid with PhonePe</span>
</div>
<div>
    <h5>PAYMENT DETAILS</h5>
    <hr>
    <p>Transaction Id: <%=orders.Order_id%></p>
    <p>Using <%= paymentDetails.data.paymentInstrument.cardType %></p>
    
</div>
<div>
    <h5>DELIVERY ADDRESS</h5>
    <hr>
    <p><%=orders.address.location%></p>
</div>
<div>
    <h5>CONTACT DETAILS</h5>
    <hr>
    <p><%=orders.user.email%></p>
    <!-- <p><%=orders.user.mobile%></p> -->

</div>
<div>
    <div>ORDER SUMMARY(<%=orders.cart.totalQty%>)</div>
    <p></p>
    <p>Sub Total</p> <p>&#8377; <%= (orders.cart.totalCost).toLocaleString("en-IN") %></p>
    <p>Delivery </p>
    <% if(orders.cart.totalCost < 299){ %> 
    <p>&#8377; 50</p>
     <%}else{%>
    <p>&#8377; 0</p>
    <%}%>
    <hr>
    <p>Total</p> <p><%=(paymentDetails.data.amount / 100).toLocaleString("en-IN")%></p>
</div>
</div>
</div>



