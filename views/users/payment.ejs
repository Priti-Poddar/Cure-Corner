<%- include("../includes/flash.ejs")%>

<h3 style="width: 90%; margin: 1rem auto">Payments</h3>
<hr style="width: 90%; margin: auto" />
<div
  style="
    width: 90%;
    display: flex;
    justify-content: space-between;
    margin:4rem auto;
    font-family: Open Sans;
  "
>
  <div style=" border: 1px solid rgb(189, 187, 187);border-radius: 15px; width: 100%;margin-right: 2rem;">
    
    <form action="/pay" method="POST" class="phonepeDiv">
      <% let amount = 0 %> <% if( cartItem.totalCost <299){ %> <% amount =
      cartItem.totalCost +50; %> <% }else{ %> <% amount = cartItem.totalCost ;
      %> <% } %>
      <input type="hidden" id="amount" name="amount" value= <%=amount%> >
        <div style="display: flex;">
        <img src="https://download.logo.wine/logo/PhonePe/PhonePe-Logo.wine.png" class="PhonePe-Logo">
          <h5 style="align-self: center; font-weight: bold;">PhonePe</h5>
      </div>
      <button class="btn payBtn" type="submit" >Pay Now</button>
    </form>
    <hr style="width: 95%; margin:.2rem auto; margin-top: -.2rem;"/>

    <form action="/cart/payLater" method="POST" class="phonepeDiv">
      <h5 style="margin-left: .5rem; font-weight: bold;">Pay on Delivery</h5>
      <button class="btn payBtn" type="submit">Place Order</button>
    </form>
  </div>

  <div style="width: 40%; margin-top: -2rem;">
    <h5>Sub Total</h5>
    <div style="border: 1px solid rgb(189, 187, 187);border-radius: 15px; padding: .5rem;">
      <h5>
        Total Items: <%= cartItem.totalQty %>
      </h5>
      <% if(cartItem.totalCost <299) {%>
      <h5
        name="amount"
      >
        Total amount: &#8377;<%= (cartItem.totalCost+50).toLocaleString("en-IN") %>
      </h5>
      <%} else { %>
      <h5
        name="amount"
      >
        Total amount: &#8377;<%= (cartItem.totalCost+0).toLocaleString("en-IN") %>
      </h5>

      <% }%>
    </div>
  </div>

